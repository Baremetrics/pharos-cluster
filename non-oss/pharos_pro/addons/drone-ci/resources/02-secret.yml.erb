apiVersion: v1
kind: Secret
metadata:
  name: drone-secrets
  namespace: drone-ci
data:
  server.secret: <%= Base64.strict_encode64(secret) %>
  <% if remote_config.github %>
  server.remote.github.client: <%= Base64.strict_encode64(remote_config.github.client) %>
  server.remote.github.secret: <%= Base64.strict_encode64(remote_config.github.secret) %>
  <% end%>
  <% if remote_config.gitlab %>
  server.remote.gitlab.client: <%= Base64.strict_encode64(remote_config.gitlab.client) %>
  server.remote.gitlab.secret: <%= Base64.strict_encode64(remote_config.gitlab.secret) %>
  <% end%>